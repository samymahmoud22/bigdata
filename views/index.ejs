<!DOCTYPE html>
<html>
<head>
  <title>Student System</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <script src="/js/theme.js" defer></script>
</head>
<body class="light">
  <div class="card shadow p-4 mt-4">

  <div class="d-flex justify-content-between mb-3">
    <h2 class="text-center mb-4">Student Management System</h2>

    <button class="btn btn-secondary" onclick="toggleTheme()">ğŸŒ™ / â˜€ï¸</button>
  </div>

  <div class="d-flex gap-2 mb-3">
    <a href="/add" class="btn btn-success">â• Add Student</a>
    <form method="POST" action="/search" class="d-flex gap-2">
      <input name="name" class="form-control" placeholder="Search by name" required>
      <button class="btn btn-primary w-100">ğŸ” Search</button>
    </form>
  </div>

  <table class="table table-striped table-hover">
    <thead class="table-dark">
      <tr>
        <th>Name</th><th>Age</th><th>Phone</th><th>Subject</th><th>Date</th><th>Actions</th>
      </tr>
    </thead>
    <tbody>
    <% data.forEach(d => { %>
      <tr>
        <td><%= d.name %></td>
        <td><%= d.age %></td>
        <td><%= d.phone %></td>
        <td><%= d.subject %></td>
        <td><%= d.date %></td>
        <td>
          <a href="/edit/<%= d._id %>" class="btn btn-warning btn-sm">Edit</a>
          <a href="/delete/<%= d._id %>" class="btn btn-danger btn-sm">Delete</a>
        </td>
      </tr>
    <% }) %>
    </tbody>
  </table>
</div>
</body>
</html>
